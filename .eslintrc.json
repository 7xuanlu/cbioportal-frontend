{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true
    },
    "extends": ["airbnb"],

    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "module": true,
        "__DEBUG__": true
    },
    "rules": {
        "indent": [
            2,
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "react/jsx-indent":"off",
        "import/no-unresolved":"off",
        "react/jsx-filename-extension":"off",
        "max-len":"off",
        "import/imports-first":"off",
        "import/no-extraneous-dependencies":"off",
        "padded-blocks":"off"
    }
}
